// fixed asin(fixed x)
function int asin(int x)
{
	return atan(FixedDiv(x, zan_FixedSqrt(1.0 - FixedMul(x, x))));
}

// fixed acos(fixed x)
function int acos(int x)
{
	return 2 * atan(zan_FixedSqrt(FixedDiv(1.0 - x, 1.0 + x)));
}

